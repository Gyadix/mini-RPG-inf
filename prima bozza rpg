import java.util.Scanner;

public class Game{
	    String nome;
	    int vigore;
	    int forza;
	    int ps;
	    int puntiesperienza;
	    String arma;
	    int[] inventario;
	    String missioni;
	    int classe;
	    String arciere;
	    String fante;
	    String speziale;
	    String guardiano;
	    String cavallo;
	    boolean giocoiniziato = false;
	    
	    String scelta1 = "Inizia";
	    String scelta2 = "Inventario";
	    String scelta3 = "Esci";
	}
	public static void main(String[]args){
	    Scanner input = new Scanner(System.in);
	    	    
	    String scelta1 = "Inizia";
	    String scelta2 = "Inventario";
	    String scelta3 = "Esci";
	    int scelta;
	    do{
	        if (giocoiniziato == false){
	    System.out.print("Inserisci nome eroe: ");
	    String nome = input.nextLine();
	    System.out.println("Benvenuto/a " + nome);
	    System.out.println("1. " + scelta1);
	    System.out.println("2. " + scelta2);
	    System.out.println("3. " + scelta3);
	    
	    scelta = input.nextInt();
	        }else{
	            scelta = 1;
	        }
	    }switch (scelta){
	        case 1:
	            if(giocoiniziato==false){
	                System.out.println("Scegli la tua classe:");
	                System.out.println("1.Arciere: support");
	                System.out.println("2.Fante: DPS + hai un cavallo");
	                System.out.println("3.Speziale: healer");
	                System.out.println("4.Guardiano: tank");
	                System.out.println("Inserisci la tua scelta (scrivi nome):");
	                classe = input.nextInt();	            
	                
	                switch (classe){
	                        case 1:
	                            System.outprintln("Hai scelto l'arciere")
	                        ps 15;
	                        forza 15;
	                        vigore 20;
	                        System.outprintln("Punti salute:"+ps"\n""forza:"+forza"\n""Vigore:"+vigore"\n");
	                        System.out.println("La tua arma è un arco da guerra");//ricontrolla cosa siano
	                        giocoiniziato = true;
	                        break;
	                        
	                        case 2:
	                            System.out.println("Hai scelto il fante(DPS)");
	                        ps 15;
	                        forza 20;
	                        vigore 20;
	                         System.outprintln("Punti salute:"+ps"\n""forza:"+forza"\n""Vigore:"+vigore"\n");
	                         System.outprintln("La tua arma è una lancia ed hai un cavallo");
	                         System.out.println("Scegli il nome del cavallo: ")
	                         String cavallo = input.nextLine();
	                         giocoiniziato = true;
	                         break;
	                         
	                        case 3:
	                            System.out.println("Hai scelto lo speziale(healer)");
	                        ps 10;
	                        forza 10;
	                        vigore 10;
	                         System.outprintln("Punti salute:"+ps"\n""forza:"+forza"\n""Vigore:"+vigore"\n");
	                         System.outprintln("La tua arma è un pugnale");
	                }
	            }
	    }
	}
